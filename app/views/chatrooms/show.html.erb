<div class="row chat">
  <div class="chat-title">
    <h1 class="size">#<%= @chatroom.name %></h1>
  </div>

<div class="wrap">
    <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' class="text-message">
      <div class="alert alert-info" style="display:none" role="alert">You have new messages</div>
      <% @messages.each do |message| %>
        <%= render message %>
      <% end %>
    </div>

    <%= form_for [@chatroom, Message.new] do |f| %>
    <%= f.text_area :body, rows:1, class:'form-control', placeholder: '...', autofocus: true %>
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <span class="glyphicon glyphicon-send"></span>
    <% end %>

    <% end %>
</div>


<div class="edit-but">
  <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_chatroom_path(@chatroom) %> |
  <% end %>

    <%= link_to 'Back', chatrooms_path %>
</div>
</div>
